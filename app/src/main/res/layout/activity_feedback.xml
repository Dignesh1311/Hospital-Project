<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    android:padding="16dp">

    <include layout="@layout/toolbar"/>
    <ImageView
        android:id="@+id/feedback_image"
        android:layout_width="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/feedback"
        android:layout_height="120dp"
        android:paddingBottom="40dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/feedback_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="text"
        android:padding="9dp" />


    <EditText
        android:id="@+id/feedback_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/black"
        android:hint="Enter Your Email"
        android:textColor="@color/black"
        android:inputType="textEmailAddress" />



    <EditText
        android:id="@+id/feedback_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/black"
        android:hint="Enter Your Phone Number"
        android:textColor="@color/black"
        android:inputType="phone"/>


    <EditText
        android:id="@+id/feedback_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/black"
        android:hint="Write your Feddback"
        android:textColor="@color/black" />

    <RatingBar
        android:layout_marginTop="10dp"
        android:max="5"
        android:id="@+id/feedback_rating"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/feedback_submit_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Feedback Submit" />


</LinearLayout>
